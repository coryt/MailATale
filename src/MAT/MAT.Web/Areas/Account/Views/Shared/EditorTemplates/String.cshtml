<div class="control-group">
    @Html.Label(@ViewData.ModelMetadata.DisplayName, new {@class = "control-label"})
    <div class="controls">
        @Html.TextBox(@ViewData.ModelMetadata.PropertyName, ViewData.TemplateInfo.FormattedModelValue, new {@class = "input-large"})
        @Html.ValidationMessage(string.Empty)
    </div>
</div>